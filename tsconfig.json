{
  "compilerOptions": {
    "lib": ["esnext"],
    "module": "commonjs",
    "target": "es5",
    "outDir": "./dist",
    "rootDirs": ["src", "tests"],
    "strict": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "allowJs": true,
    "paths": {
      "@/tests/*": ["../tests/*"],
      "@/*": ["*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [ "src", "tests"]
}
